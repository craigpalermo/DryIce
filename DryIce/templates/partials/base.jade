doctype 5
html(lang='en')
  {% verbatim %}
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')

    title DryIce

    link(rel='icon', type='image/png', href="/static/img/favicon.ico")

    link(rel="stylesheet", href="/static/vendor/jquery-ui/jquery-ui.css")
    link(rel="stylesheet", href="/static/vendor/jquery-file-upload/jquery.fileupload-ui.css")

    link(rel='stylesheet', href="/static/vendor/bootstrap/bootstrap.css")

    link(rel='stylesheet', href="/static/css/main.css")

  body
    header#header
      .container
        .row
          #title.col-xs-12.col-sm-5.col-md-3.col-md-offset-2
            a(href='/')#logo-link
              h1.col-xs-center.col-sm-right.col-lg-left DryIce
          .col-xs-12.col-sm-6.col-md-3
            #subtitle
              h2.col-xs-center.col-sm-right
                | upload files
                br
                | download files
                br
                small nothing else

    div#content

        // CONTENT GOES HERE

    nav.navbar.navbar-default.navbar-fixed-bottom(role="navigation")
      div.pull-left.navbar-text Problem? Contact <a href="mailto:support@dryice.io">support@dryice.io</a>
      div.pull-right#footer-navbar
        ul.nav.navbar-nav
          
          // In navbar, show different stuff depending on if user is logged in
          {% if user.is_authenticated %}
          div.navbar-text Welcome, {{ "{{ user.username }" }}}!
          {% endif %}
          
          li(class="{% block home_active %}{% endblock %}")
            a(href='/') Home
          li(class="{% block faq_active %}{% endblock %}")
            a(href='/about/') FAQ
          li(class="{% block disclaimer_active %}{% endblock %}")
            a(href='/disclaimer/') Disclaimer
          
          {% if user.is_authenticated %}
          li
            a(href="/users/logout/") Log Out
          {% else %}
          li(class="{% block register_active %}{% endblock %}")
            a(href="/users/sign_up/") Sign Up
          {% endif %}
          
          {% if not user.is_authenticated %}
          li.dropdown
            a.dropdown-toggle(href='/login/', data-toggle="dropdown") Sign In <strong class="caret"></strong>
            div.dropdown-menu.pull-left(style="padding: 15px;")
              form(action="/api/login/", method="post", accept-charset="UTF-8", role="form")
                <div style='display:none'><input type='hidden' name='csrfmiddlewaretoken' value='{{ "{{ csrf_token }" }}}' /></div>
                div.form-group
                  input#username.form-control(style="margin-bottom: 15px;", name="username", size="30", placeholder='username')
                div.form-group
                  input#password.form-control(style="margin-bottom: 15px;", type="password", name="password", size="30", placeholder='password')
                input#remember_me(style="float: left; margin-right: 10px;", type="checkbox", name="remember_me", value="1")
                label.string.optional(for='remember_me') Remember Me
                input.btn.btn-primary(style="clear: left; width: 100%; height: 32px; font-size: 13px;", type="submit", name="commit", value="Sign In")

            script
              $(function() {
                // Setup drop down menu
                $('.dropdown-toggle').dropdown();

                // Fix input element click problem
                $('.dropdown input, .dropdown label').click(function(e) {
                  e.stopPropagation();
                });
              });
           {% endif %}

          li
            a#clear_session.navbar-btn.btn-danger.btn(href='/clear_session/', title="Delete all files linked to this session (cannot be undone).")
              | Clear Session

    #scripts
      script(src="/static/vendor/jquery/jquery.js")
      script(src="/static/vendor/jquery-ui/jquery-ui.js")
      script(src="/static/vendor/jquery-file-upload/jquery.iframe-transport.js")
      script(src="/static/vendor/jquery-file-upload/jquery.fileupload.js")

      script(src="/static/vendor/bootstrap/bootstrap.js")
      script(src="/static/vendor/bootstrap-file-input/bootstrap.file-input.js")

      script(src="/static/vendor/moment/moment.js")

      script(src="/static/js/countdown_timer.js")

      script(src="/static/vendor/parsleyjs/parsley.js")

      script(src="/static/js/main.js")
      block extrascripts
  {% endverbatim %}
