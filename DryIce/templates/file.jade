{% extends "base.jade" %}
{% load staticfiles %}

{% block content %}
div.text-content.pull-center
  .row
    .col-xs-12.col-sm-5.file-page-cell
      .file-cell-wrapper
        strong File: 
        {{ filename }}
    .col-xs-12.col-sm-4.file-page-cell
      p 
        strong Direct Link: 
        span https://dryice.io/f/{{ ez_link }}
    .col-xs-12.col-sm-2
      #download-button.file-cell-wrapper.file-page-cell
        a#download-link(href="{{ url }}", download="{{ filename }}")
          button.btn.btn-default(type="button") Download
  .row
    .col-sm-12
      //-h4 This file will expire in: 
      //-  strong
      //-    span#countdown(data-expire_time="{{ expire_time }}") 
    
      pre.prettyprint.linenums#code-preview

      img#image(src="")

      br

{% endblock %}

{% block extrascripts %}
script(src="{% static '/static/js/file-page.js' %}")
script(src="{% static '/static/vendor/google-code-prettify/prettify.js' %}")
{% endblock %}
